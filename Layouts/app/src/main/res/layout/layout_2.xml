<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_height="@dimen/box_Size"
        android:layout_width="@dimen/box_Size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/foo"
        />
    <View
        android:id="@+id/centerBlock"
        android:layout_height="@dimen/box_Size"
        android:layout_width="@dimen/box_Size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/foo"
        />
    <View
        android:layout_height="@dimen/box_Size"
        android:layout_width="@dimen/box_Size"
        android:layout_toLeftOf="@id/centerBlock"
        android:layout_above="@id/centerBlock"
        android:background="@color/foo"
        />
    <View
        android:layout_height="@dimen/box_Size"
        android:layout_width="@dimen/box_Size"
        android:layout_toRightOf="@id/centerBlock"
        android:layout_below="@id/centerBlock"
        android:background="@color/foo"
        />
</RelativeLayout>