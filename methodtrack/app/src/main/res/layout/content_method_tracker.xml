<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_method_tracker" tools:context=".methodTracker">

    <TextView
        android:text="Temporary: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/first" />
    <TextView
        android:text="onCreate(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:id="@+id/onCreateView"/>
    <TextView
        android:text="onStart(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onCreateView"
        android:id="@+id/onStartView"/>
    <TextView
        android:text="onResume(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onStartView"
        android:id="@+id/onResumeView"/>
    <TextView
        android:text="onPause(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onResumeView"
        android:id="@+id/onPauseView"/>
    <TextView
        android:text="onStop(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onPauseView"
        android:id="@+id/onStopView"/>
    <TextView
        android:text="onRestart(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onStopView"
        android:id="@+id/onRestartView"/>
    <TextView
        android:text="onDestroy(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onRestartView"
        android:id="@+id/onDestroyView"/>

    <TextView
        android:text="Totals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/divider"/>

    <TextView
        android:text="onCreate(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:id="@+id/onCreateViewTotal"/>
    <TextView
        android:text="onStart(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onCreateViewTotal"
        android:id="@+id/onStartViewTotal"/>
    <TextView
        android:text="onResume(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onStartViewTotal"
        android:id="@+id/onResumeViewTotal"/>
    <TextView
        android:text="onPause(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onResumeViewTotal"
        android:id="@+id/onPauseViewTotal"/>
    <TextView
        android:text="onStop(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onPauseViewTotal"
        android:id="@+id/onStopViewTotal"/>
    <TextView
        android:text="onRestart(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onStopViewTotal"
        android:id="@+id/onRestartViewTotal"/>
    <TextView
        android:text="onDestroy(): 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onRestartViewTotal"
        android:id="@+id/onDestroyViewTotal"/>
</RelativeLayout>
